<h2><%= t('users.change_your_password') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name),
                    html: { class: 'form-horizontal', method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="inputs">
    <%= f.input :password, label: t('users.new_password'), required: true %>
    <%= f.input :password_confirmation, label: t('users.confirm_your_new_password'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('users.change_my_password') %>
  </div>
<% end %>

<%= render "links" %>
